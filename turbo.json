{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL","AUTH_SECRET"],
  "tasks": {
    "ui#build": {
      "dependsOn": ["^build", "@repo/db#build","@repo/auth#build","@repo/core#build"],
      "outputs": ["./.next/**", "./.next/cache/**"],
      "outputLogs": "full",
      "env": ["DATABASE_URL"]
    },
    "api#build": {
      "dependsOn": ["^build","@repo/db#build","@repo/auth#build","@repo/core#build","@repo/tsconfig#build"],
      "outputs": ["./build/**"],
      "outputLogs": "full"
    },
    "core#build": {
      "dependsOn": ["^build","@repo/db#build","@repo/tsconfig#build"],
      "outputs": ["./build/**"],
      "outputLogs": "full"
    },
    "@repo/auth#build":{
      "dependsOn": ["^build","@repo/db#build"],
      "outputs": ["./build/**"],
      "env" :["AUTH_SECRET"]
    },
    "@repo/db#build": {
      "dependsOn": ["^build"],
      "outputs": ["./build/**"],
      "outputLogs": "full",
      "inputs": ["$TURBO_DEFAULT$","./.env"],
      "env": ["DATABASE_URL"]
    },
    "@repo/core#build": {
      "dependsOn": ["^build"],
      "outputs": ["./build/**"],
      "outputLogs": "full"
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "@repo/tsconfig#build":{ },
    "@repo/db#dev":{
      "outputs": ["./build/**"],
      "inputs": ["$TURBO_DEFAULT$","./.env"],
      "env": ["DATABASE_URL"]
    },
    "@repo/auth#dev":{
      "inputs": ["$TURBO_DEFAULT$","./.env"],
      "env": ["AUTH_SECRET"],
      "outputs": ["./build/**"]
    },
    "dev": {
      "env": ["DATABASE_URL","AUTH_SECRET"],
      "persistent": true,
      "cache": false
    }
  }
}