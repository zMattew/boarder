{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "ui#build": {
      "dependsOn": [
        "^build",
        "@repo/db#build",
        "@repo/auth#build",
        "@repo/core#build"
      ],
      "outputs": [
        "./.next/**",
        "./.next/cache/**"
      ],
      "outputLogs": "full",
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET",
        "AUTH_*_ID",
        "AUTH_*_SECRET",
        "SMTP_*",
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN"
      ]
    },
    "api#build": {
      "dependsOn": [
        "^build",
        "@repo/db#build",
        "@repo/auth#build",
        "@repo/core#build",
        "@repo/tsconfig#build"
      ],
      "outputs": [
        "./build/**"
      ],
      "outputLogs": "full",
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET",
        "AUTH_*_ID",
        "AUTH_*_SECRET",
        "SMTP_*"
      ]
    },
    "core#build": {
      "dependsOn": [
        "^build",
        "@repo/db#build",
        "@repo/tsconfig#build"
      ],
      "outputs": [
        "./build/**"
      ],
      "outputLogs": "full"
    },
    "@repo/auth#build": {
      "dependsOn": [
        "@repo/db#build"
      ],
      "outputs": [
        "./build/**"
      ],
      "env": [
        "AUTH_SECRET",
        "AUTH_*_ID",
        "AUTH_*_SECRET",
        "SMTP_*"
      ]
    },
    "@repo/db#build": {
      "outputs": [
        "./build/**",
        "./generated/**"
      ],
      "outputLogs": "full",
      "env": [
        "DATABASE_URL"
      ]
    },
    "@repo/db#deploy": {
      "dependsOn": ["@repo/db#build"],
      "outputLogs": "full",
      "env": [
        "DATABASE_URL"
      ]
    },
    "@repo/core#build": {
      "dependsOn": [
        "@repo/db#build"
      ],
      "outputs": [
        "./build/**"
      ],
      "outputLogs": "full"
    },
    "build": {},
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "@repo/tsconfig#build": {},
    "@repo/db#dev": {
      "outputs": [
        "./build/**"
      ],
      "env": [
        "DATABASE_URL"
      ]
    },
    "@repo/auth#dev": {
      "env": [
        "AUTH_SECRET",
        "AUTH_*_ID",
        "AUTH_*_SECRET",
        "SMTP_*"
      ],
      "outputs": [
        "./build/**"
      ]
    },
    "dev": {
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET"
      ],
      "persistent": true,
      "cache": false
    }
  }
}